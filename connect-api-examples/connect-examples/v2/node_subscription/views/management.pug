extends layout
block content
  a(class="back-button" href="/")
    svg(width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
      path(d="M8 1L1 8m0 0h14M1 8l7 7" stroke="#8594A7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
  div(class="container")
    div(class="subtitle") Member details
    div(class="title") #{customer.givenName} #{customer.familyName}
    div(class="title-description") Card on file: #{customer.cards ? `${customer.cards[0].cardBrand} ending in ${customer.cards[0].last4}` : "None"}
    div(class="title-description") Email: #{customer.emailAddress }

    div(class="list-title") Enrolled Plans
    div(class="list")
      each subscriptionInfo, index in enrolledSubscriptionsInfo
        a(class="listitem" href=`/subscription/view/${locationId}/${customer.id}/${subscriptionInfo.planId}`)
          div(class="listitem__title" ) #{subscriptionInfo.name}
          div(class="listitem__subtitle blue") Active subscription
          div(class="listitem__right")
            svg(width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg")
              path(d="M1 1L7 7L1 13" stroke="#D0D3D6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")

    div(class="list-title") Additional Plans
    div(class="list")
      each subscriptionInfo, index in additionalSubscriptionsInfo
        a(class="listitem" href=`/subscription/view/${locationId}/${customer.id}/${subscriptionInfo.planId}`)
          div(class="listitem__title") #{subscriptionInfo.name}
          div(class="listitem__subtitle") Add subscription
          div(class="listitem__right")
            svg(width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg")
              path(d="M1 1L7 7L1 13" stroke="#D0D3D6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
